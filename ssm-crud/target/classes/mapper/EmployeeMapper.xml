<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.EmployeeMapper">
    <insert id="addEmp" parameterType="com.example.bean.Employee">
        insert into employee
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="empId != null">
                emp_id,
            </if>
            <if test="empName != null">
                emp_name,
            </if>
            <if test="gender != null">
                gender,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="ip != null">
                ip,
            </if>
            <if test="dId != null">
                d_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="empId != null">
                #{empId},
            </if>
            <if test="empName != null">
                #{empName},
            </if>
            <if test="gender != null">
                #{gender},
            </if>
            <if test="email != null">
                #{email},
            </if>
            <if test="ip != null">
                #{ip},
            </if>
            <if test="dId != null">
                #{dId},
            </if>
        </trim>
    </insert>
</mapper>